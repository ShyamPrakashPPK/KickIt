<!-- shop page start -->
<div class="shop-page pt-85">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-12">
                <div class="sidebar">
                    <div class="product-widget">
                        <h3 class="widget-title mb-30">Product categories</h3>
                        <ul class="product-categories">
                            {{#each categories}}
                            <li><a href="shop.html">{{this.categoryName}} <span>(
                                        {{this.categoryDiscount}}%off)</span></a></li>
                            {{/each}}
                        </ul>
                    </div>



                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12">
                <div class="shop-top-bar position-relative">
                    <div class="showing-result">
                        <p> Showing all results</p>
                    </div>
                    <div class="shop-tab">
                        <nav>
                            <div class="nav nav-tabs shop-tabs" id="nav-tab" role="tablist">
                                <button>
                                    <span>views</span>
                                </button>
                                <button class="nav-link" id="nav-home-tab" data-bs-toggle="tab"
                                    data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home"
                                    aria-selected="true">
                                    <img src="./assets/img/essential/i2.svg" alt="">
                                </button>
                                <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab"
                                    data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile"
                                    aria-selected="false">
                                    <img src="./assets/img/essential/i3.svg" alt="">
                                </button>
                                <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab"
                                    data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact"
                                    aria-selected="false">
                                    <img src="./assets/img/essential/i4.svg" alt="">
                                </button>
                                <button class="nav-link active " id="nav-contact-tab2" data-bs-toggle="tab"
                                    data-bs-target="#nav-list" type="button" role="tab" aria-controls="nav-contact"
                                    aria-selected="false">
                                    <img src="./assets/img/essential/list.svg" alt="">
                                </button>
                            </div>
                        </nav>
                    </div>

                </div>
                <div class="shop-page-product pt-50 pb-100">
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12">
                            <div class="tab-content" id="nav-tabContent">
                                <div class="tab-pane fade " id="nav-home" role="tabpanel"
                                    aria-labelledby="nav-home-tab">
                                    <div class="row">
                                        {{#each product}}
                                        <div class="col-xl-6">
                                            <div class="product product-4">
                                                <div class="product__thumb">
                                                    <a href="/single?id={{this._id}}">
                                                        <img class="product-primary"
                                                            src="/product-images1/{{this._id}}.jpg" alt="product_image">
                                                        <img class="product-secondary"
                                                            src="/product-images2/{{this._id}}.jpg" alt="product_image">
                                                    </a>
                                                    <!-- <div class="product__update">
                                                            <a class="#">new</a>
                                                        </div> -->
                                                    <div class="product-info mb-10">
                                                        <div class="product_category">
                                                            <span>{{this.prodCategory}}</span>
                                                        </div>

                                                    </div>
                                                    <div class="product__name">
                                                        <h4><a href="/single?id={{this._id}}">{{this.prodName}}</a></h4>
                                                        <div class="pro-price">
                                                            <p class="p-absoulute pr-1"><span>₹</span>{{this.prodPrice}}
                                                                <span>₹</span><s>{{this.prodMRP}}</s>
                                                            </p>
                                                            <div onclick="addToCart('{{this._id}}')">
                                                                <a class="p-absoulute pr-2" href="#">add to cart</a>
                                                            </div>
                                                            {{!-- <button onclick="addToCart('{{this._id}}')"
                                                                class="p-absoulute pr-2">Add to cart</button> --}}


                                                        </div>
                                                    </div>
                                                    <div class="product__action">
                                                        <div class="inner__action">
                                                            <div class="wishlist" onclick="wishlist('{{this._id}}')">
                                                                <a><i class="fal fa-heart"></i></a>
                                                            </div>
                                                            <div class="view">
                                                                <a><i class="fal fa-eye"></i></a>
                                                            </div>
                                                            <div class="layer">
                                                                <a><i class="fal fa-layer-group"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}

                                    </div>
                                </div>
                                <div class="tab-pane fade" id="nav-profile" role="tabpanel"
                                    aria-labelledby="nav-profile-tab">
                                    <div class="row">
                                        {{#each product}}
                                        <div class="col-xl-4">
                                            <div class="product product-4">
                                                <div class="product__thumb">
                                                    <a href="/single?id={{this._id}}">
                                                        <img class="product-primary"
                                                            src="/product-images1/{{this._id}}.jpg" alt="product_image">
                                                        <img class="product-secondary"
                                                            src="/product-images2/{{this._id}}.jpg" alt="product_image">
                                                    </a>
                                                    <!-- <div class="product__update">
                                                            <a class="#">new</a>
                                                        </div> -->
                                                    <div class="product-info mb-10">
                                                        <div class="product_category">
                                                            <span>{{this.prodCategory}}</span>
                                                        </div>

                                                    </div>
                                                    <div class="product__name">
                                                        <h4><a href="/single?id={{this._id}}">{{this.prodName}}</a></h4>
                                                        <div class="pro-price">
                                                            <p class="p-absoulute pr-1"><span>₹</span>{{this.prodPrice}}
                                                                <span>₹</span><s>{{this.prodMRP}}</s>
                                                            </p>

                                                            <div onclick="addToCart('{{this._id}}')">
                                                                <a class="p-absoulute pr-2" href="#">add to cart</a>
                                                            </div>
                                                            {{!-- <button onclick="addToCart('{{this._id}}')"
                                                                class="p-absoulute pr-2">Add to cart</button> --}}
                                                        </div>
                                                    </div>
                                                    <div class="product__action">
                                                        <div class="inner__action">
                                                            <div class="wishlist" onclick="wishlist('{{this._id}}')">
                                                                <a><i class="fal fa-heart"></i></a>
                                                            </div>
                                                            <div class="view">
                                                                <a><i class="fal fa-eye"></i></a>
                                                            </div>
                                                            <div class="layer">
                                                                <a><i class="fal fa-layer-group"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="nav-contact" role="tabpanel"
                                    aria-labelledby="nav-contact-tab">
                                    <div class="row">
                                        {{#each product}}
                                        <div class="col-xl-3">
                                            <div class="product product-3">
                                                <div class="product__thumb">
                                                    <a href="/single?id={{this._id}}">
                                                        <img class="product-primary"
                                                            src="/product-images1/{{this._id}}.jpg" alt="product_image">
                                                        <img class="product-secondary"
                                                            src="/product-images2/{{this._id}}.jpg" alt="product_image">
                                                    </a>
                                                    <!-- <div class="product__update">
                                                            <a class="#">new</a>
                                                        </div> -->
                                                    <div class="product-info mb-10">
                                                        <div class="product_category">
                                                            <span>{{this.prodCategory}}</span>
                                                        </div>

                                                    </div>
                                                    <div class="product__name">
                                                        <h4><a href="/single?id={{this._id}}">{{this.prodName}}</a></h4>
                                                        <div class="pro-price">
                                                            <p class="p-absoulute pr-1"><span>₹</span>{{this.prodPrice}}
                                                                <span>₹</span><s>{{this.prodMRP}}</s>
                                                            </p>
                                                            <div onclick="addToCart('{{this._id}}')">
                                                                <a class="p-absoulute pr-2" href="#">add to cart</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="product__action">
                                                        <div class="inner__action">
                                                            <div class="wishlist" onclick="wishlist('{{this._id}}')">
                                                                <a><i class="fal fa-heart"></i></a>
                                                            </div>
                                                            <div class="view">
                                                                <a><i class="fal fa-eye"></i></a>
                                                            </div>
                                                            <div class="layer">
                                                                <a><i class="fal fa-layer-group"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                                <div class="tab-pane fade show active" id="nav-list" role="tabpanel"
                                    aria-labelledby="nav-contact-tab">
                                    {{#each product}}
                                    <div class="border-top">
                                        <div class="row">
                                            <div class="col-xl-4 col-lg-4 col-md-4">
                                                <div class="list-product">
                                                    <div class="list__thumb">
                                                        <a href="/single?id={{this._id}}">
                                                            <img src="/product-images1/{{this._id}}.jpg" alt=""></a>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xl-8 col-lg-8 col-md-8">
                                                <div class="list__content">
                                                    <div class="viewcontent">
                                                        <div class="viewcontent__header">
                                                            <a href="/single?id={{this._id}}">
                                                                <h2 class="mb-10">{{this.prodName}}</h2>
                                                            </a>
                                                        </div>

                                                        <div class="viewcontent__price">
                                                            <h4><span>₹</span><s>{{this.prodMRP}}</s></h4>
                                                            <h4><span>₹{{this.prodPrice}}</span></h4>
                                                        </div>
                                                        <div class="view__para">
                                                            <p>{{this.prodDescription}}</p>
                                                        </div>
                                                        <div class="list-actions pt-20">
                                                            <div class="viewcontent__action">
                                                                <div onclick="addToCart('{{this._id}}')">
                                                                    <span><a href="#">add to cart</a></span>
                                                                </div>
                                                                <a onclick="wishlist('{{this._id}}')"><i
                                                                        class="fal fa-heart mt-5"></i></a>
                                                                <a class="ml-5"><i class="fal fa-layer-group"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- shop page end -->

