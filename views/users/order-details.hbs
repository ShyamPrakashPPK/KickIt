<section class="h-100 gradient-custom" id="invoice">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <h5 class="text-muted mb-0">Thanks for your Order, <span
                                style="color: #ff0000;">{{user.userName}}</span>!
                        </h5>
                    </div>

                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #ff1900;">Receipt</p>
                        </div>

                        <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                                {{#each userOrder}}
                                <div class="row">
                                    <div class="col-md-2">
                                        <img src="/product-images1/{{this.item}}.jpg" class="img-fluid" alt="Phone">
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0">{{this.product.prodName}}</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">{{this.product.prodCategory}}</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">{{this.product.prodBrand}}</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">{{this.quantity}}</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">{{this.product.prodPrice}}</p>
                                    </div>
                                </div>
                                {{/each}}
                                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-2">
                                        <p class="text-muted mb-0 small">Track Order</p>
                                    </div>
                                    <div class="col-md-10">
                                        {{#isEqual fullOrder.orderStatus 'placed' }}
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 10%; border-radius: 16px; background-color: #ffd500;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                        </div>
                                        {{/isEqual}}
                                        {{#isEqual fullOrder.orderStatus 'Shipped' }}
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 38%; border-radius: 16px; background-color: #f0d211;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                        </div>
                                        {{/isEqual}}
                                        {{#isEqual fullOrder.orderStatus 'On the Way' }}
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 68%; border-radius: 16px; background-color: #ffc400;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                        </div>
                                        {{/isEqual}}
                                        {{#isEqual fullOrder.orderStatus 'Delivered' }}
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 100%; border-radius: 16px; background-color: #09ff00;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                        </div>
                                        {{/isEqual}}
                                        {{#isEqual fullOrder.orderStatus 'Cancelled' }}
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 100%; border-radius: 16px; background-color: #ff0000;"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Placed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Cancelled</p>
                                        </div>
                                        {{/isEqual}}
                                    </div>
                                    {{!-- {{#isEqual fullOrder.orderStatus 'Cancelled'}}

                                    {{else }}
                                    <button type="button" id="cancel-order"
                                        onClick="cancelOrder('{{../fullOrder._id}}')"
                                        class="btn btn-warning btn-rounded ">Cancel {{../fullOrder._id}}</button>
                                    {{/isEqual}} --}}



                                    {{#isEqual fullOrder.orderStatus 'placed'}}
                                    <button id="cancelBtn " style="background-color: rgb(228,67,17);"
                                        onclick="cancelOrder('{{../fullOrder._id}}')"
                                        class="btn rounded-pill btn-sm text-light float-right">Cancel</button>
                                    {{/isEqual}}

                                    {{#isEqual fullOrder.orderStatus 'Shipped'}}
                                    <button id="cancelBtn " style="background-color: rgb(228,67,17);"
                                        onclick="cancelOrder('{{../fullOrder._id}}')"
                                        class="btn rounded-pill btn-sm text-light float-right">Cancel</button>
                                    {{/isEqual}}

                                    {{#isEqual fullOrder.orderStatus 'On the Way'}}
                                    <button id="cancelBtn " style="background-color: rgb(228,67,17);"
                                        onclick="cancelOrder('{{../fullOrder._id}}')"
                                        class="btn rounded-pill btn-sm text-light float-right">Cancel</button>
                                    {{/isEqual}}

                                    {{#isEqual fullOrder.orderStatus 'Delivered'}}
                                    <button id="cancelBtn " style="background-color: rgb(9, 139, 28);"
                                        onclick="returnOrder('{{../fullOrder._id}}')"
                                        class="btn rounded-pill btn-sm text-light float-right">Return </button>
                                    {{/isEqual}}

                                    {{#isEqual fullOrder.orderStatus 'Cancelled'}}
                                    {{/isEqual}}

                                    {{#isEqual fullOrder.orderStatus 'Return'}}
                                    <h4 class="float-left">Product Returned</h4>
                                    <h4 class="float-right"> Refund will be credited</h4>
                                    {{/isEqual}}



                                </div>

                            </div>
                        </div>



                        <div class="d-flex justify-content-between pt-2">
                            <p class="fw-bold mb-0">Delivered To:</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span>
                                ${{fullOrder.subtotal}}</p>
                        </div>

                        <div class="d-flex justify-content-between pt-2">
                            <p class="text-muted mb-0">{{fullOrder.deliveryAddress.Name}}</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> $
                                {{fullOrder.discount}}</p>
                        </div>

                        <div class="d-flex justify-content-between">
                            <p class="text-muted mb-0">{{fullOrder.deliveryAddress.HouseNo}},
                                {{fullOrder.deliveryAddress.Street}},<br>{{fullOrder.deliveryAddress.TownCity}},{{fullOrder.deliveryAddress.State}},{{fullOrder.deliveryAddress.Country}}
                            </p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">GST 10%</span> Included</p>
                        </div>

                        <div class="d-flex justify-content-between mb-5">
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Ordered On:</span> {{fullOrder.date}}
                            </p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
                        </div>
                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                        style="background-color: #f9b62e; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                            : <span class="h2 mb-0 ms-2">${{fullOrder.total}}</span></h5>
                    </div>
                    {{#isEqual fullOrder.orderStatus 'Delivered'}}
                    <div class="container">
                        {{!-- <div><button class="btn btn-sm btn-outline-danger float-right mr-5 mb-5 ml-5" onclick="exportToPDF()">Download
                                Invoice<i class="bi bi-filetype-pdf"></i></button> </div> --}}
                        <a href="/invoice?id={{../fullOrder._id}}" class="btn btn-primary ml-100">Invoice</a></a>
                    </div>
                    
                    {{/isEqual}}

                </div>
            </div>
            
        </div>
    </div>

</section>






<script>
    function cancelOrder(id) {
        console.log(id, "reached here..///")
        Swal.fire({
            title: 'Are you sure?',
            text: "This product will be cancelled from your order!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Confirm'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/cancelOrder',
                    data: {
                        orderId: id
                    },
                    method: 'post',
                    success(response) {
                        Swal.fire(
                            'Order Canceled!',
                            'Your order is cancelled Successfully.',
                            'success'
                        )
                        location.reload()
                    }
                })
            }
        })
    }


    function returnOrder(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Are you really want to return this product ?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Confirm'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/returnOrder',
                    data: {
                        orderId: id
                    },
                    method: 'post',
                    success(response) {
                        Swal.fire(
                            'Done!',
                            'Order Return request placed Successfully.',
                            'success'
                        )
                        location.reload()
                    }
                })
            }
        })
    }



 
</script>

