<body>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Showcase Management</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index">Home</a></li>
                    <li class="breadcrumb-item">Showcase</li>
                    <li class="breadcrumb-item active">New Banner</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">




                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">New </h5>



                            <form class="row g-3" action="/admin/add-showcase" method="post"
                                enctype="multipart/form-data">
                                <div class="col-md-12 mb-3">
                                    <div class="form-floating">
                                        <input name="showcaseName" type="text" class="form-control" id="floatingName"
                                            placeholder="Name of the product to be added" required>
                                        <label for="floatingName">Name</label>
                                    </div>
                                </div>
                                <div class="row mb-3 mt-3">
                                    <label for="inputNumber" class="col-sm-2 col-form-label">Shoe</label>
                                    <div class=" col-md-6  col-sm-10">
                                        <input name="shoe" class="form-control" type="file" id="formFile" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputNumber" class="col-sm-2 col-form-label">Title</label>
                                    <div class=" col-md-6  col-sm-10">
                                        <input name="title" class="form-control" type="file" id="formFile">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputColor" class="col-sm-2 col-form-label">Backgroud Color</label>
                                    <div class="col-sm-10">
                                        <input type="color" class="form-control form-control-color" id="exampleColorInput" value="#4154f1"
                                            name="bgColor" title="Choose your color">
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button type="reset" class="btn btn-secondary">Reset</button>
                                </div>
                                </form>
                        </div>
                        <!-- End floating Labels Form -->

                    </div>
                </div>

            </div>
            </div>
        </section>

    </main><!-- End #main -->