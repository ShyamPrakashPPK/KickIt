
<body>

    <main id="main" class="main">

        <div class="pagetitle">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index">Home</a></li>
                    <li class="breadcrumb-item">Brand</li>
                    <li class="breadcrumb-item active">New Brand</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">

           
               

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">New Brand</h5>

                   
                     
                            <form class="row g-3" action="/admin/add-brand" method="post" enctype="multipart/form-data">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input name="brandName" type="text" class="form-control" id="floatingName"
                                            placeholder="Name of the product to be added" required>
                                        <label for="floatingName">Brand name</label>
                                    </div>
                                </div>
                                <div class="row mb-3 mt-5">
                                    <label for="inputNumber" class="col-sm-2 col-form-label">Brand Logo</label>
                                    <div class=" col-md-6  col-sm-10">  
                                        <input  name="brandLogo" class="form-control" type="file" id="formFile" required>
                                    </div>
                                </div> 
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button type="reset" class="btn btn-secondary">Reset</button>
                                </div>
                            </form><!-- End floating Labels Form -->

                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->

