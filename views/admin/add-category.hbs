<body>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Add Category</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index">Home</a></li>
                    <li class="breadcrumb-item">Product</li>
                    <li class="breadcrumb-item active">New Category</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">




                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">New Category</h5>



                            <form class="row g-3" action="/admin/add-category" method="post"
                                enctype="multipart/form-data">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input name="categoryName" type="text" class="form-control" id="floatingName"
                                         required   placeholder="Name of the category to be added">
                                        <label for="floatingName">Category name</label>
                                    </div>
                                </div>
                                <div class="col-10">
                                    <label for="inputEmail3" class="col-sm-4 col-form-label">Category Discount %</label>
                                    <div class="col-sm-2">
                                        <input type="number" required name="categoryDiscount" class="form-control" id="inputText">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea name="categoryDescription" class="form-control"
                                            placeholder="Product description" required id="floatingTextarea"
                                            style="height: 100px;"></textarea>
                                        <label for="floatingTextarea">Description</label>
                                    </div>
                                </div>
                           



                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button type="reset" class="btn btn-secondary">Reset</button>
                                </div>
                            </form><!-- End floating Labels Form -->

                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->