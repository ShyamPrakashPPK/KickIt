<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Orders</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">Orders</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Orders</h5>
                            <!-- Default Table -->
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">User Name</th>
                                        <th scope="col">Order date</th>
                                        <th scope="col">Location</th>
                                        <th scope="col">Net Amount</th>
                                        <th scope="col">Payment method</th>
                                        <th scope="col">Payment status</th>
                                        <th scope="col">Order Status</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each orders}}
                                    <tr>
                                        <th scope="row">{{inc @index}}</th>
                                        <td>{{this.address.Name}}</td>
                                        <td>{{this.date}}</td>
                                        <td>{{this.address.Street}},{{this.address.TownCity}}<br>{{this.address.State}}
                                        </td>
                                        <td>{{this.totalAmount.total}}</td>
                                        <td>{{this.paymentMethod}}</td>
                                        <td>{{this.status}}</td>
                                        <td>{{this.orderStatus}}</td>
                                        <td><a href="/admin/order-details?id={{this._id}}" id="" name=""  class="btn btn-primary">➡️</a></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <!-- End Default Table Example -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main><!-- End #main -->



    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>